extends layouts/application.pug

block description
  | Acesse sua conta

block form
  .page__form
    form.ztt-card.ztt-card--no-title(name="vm.signinForm", ng-submit="vm.signinFormSubmit", ng-autodisable="")
      .ztt-card__content
        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="email") Digite seu e-mail
            input.ztt-form-group__input#email(ng-model="vm.user.email", ng-required="true", type="text", ztt-input="")

        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="password") Digite sua senha
            input.ztt-form-group__input#password(ng-model="vm.user.password", ng-required="true", ng-minlength="6", type="password", ztt-input="")

      .ztt-card__footer.ztt-card__footer--center
        button.btn.btn--primary.btn--block(type="submit", ng-disabled="vm.signinForm.$invalid") Entrar

block links
  .page__links
    a.page__link(ui-sref="signup")
      | Ainda não possui uma conta?
      strong.page__link__highlight Crie sua conta
    a.page__link(ui-sref="passwordRecovery")
      | Esqueceu sua senha?
      strong.page__link__highlight Vamos recuperá-la
