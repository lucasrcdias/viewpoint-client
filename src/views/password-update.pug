extends layouts/application.pug

block description
  | Utilize o espaço abaixo para atualizar sua senha

block form
  .page__form
    form.ztt-card(name="vm.passwordForm", ng-submit="vm.passwordFormSubmit", ng-autodisable="")
      .ztt-card__content
        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="email") Qual sua senha atual
            input.ztt-form-group__input#email(ng-model="vm.user.current_password", ng-required="true", ng-minlength="6", type="password", ztt-input="")

        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="password") Escolha uma nova senha para acessar o viewpoint
            input.ztt-form-group__input#password(ng-model="vm.user.password", ng-required="true", ng-minlength="6", type="password", ztt-input="")

        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="password_confirmation") Agora só falta confirmar sua nova senha
            input.ztt-form-group__input#password_confirmation(ng-model="vm.user.password_confirmation", ng-required="true", ng-minlength="6", type="password", ztt-input="")

      .ztt-card__footer.ztt-card__footer--center
        button.btn.btn--primary.btn--block(type="submit", ng-disabled="vm.passwordForm.$invalid") Atualizar senha

block links
  .page__links
    a.page__link(ui-sref="home") Voltar para a tela inicial
