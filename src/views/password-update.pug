extends layouts/application.pug

block description
  | Utilize o espa√ßo abaixo para atualizar sua senha

block form
  .page__form
    form.ztt-card.ztt-card--no-title(name="vm.passwordForm", ng-submit="vm.passwordFormSubmit(vm.user)", ng-autodisable="")
      .ztt-card__content
        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="password") Escolha uma nova senha
            input.ztt-form-group__input#password(name="password", ng-model="vm.user.password", ng-required="true", ng-minlength="6", type="password", ztt-input="")
          vp-error-messages(errors="vm.fieldErrors('password')", is-dirty="vm.passwordForm.password.$dirty")

        .ztt-form-group
          .ztt-form-group__wrapper
            label.ztt-form-group__label.ztt-form-group__label--floating(for="passwordConfirmation") Confirme sua nova senha
            input.ztt-form-group__input#passwordConfirmation(name="passwordConfirmation", ng-model="vm.user.passwordConfirmation", ng-required="true", ng-minlength="6", type="password", ztt-input="", vp-password-match="vm.user.password")
          vp-error-messages(errors="vm.fieldErrors('passwordConfirmation')", is-dirty="vm.passwordForm.passwordConfirmation.$dirty")

      .ztt-card__footer.ztt-card__footer--center
        button.btn.btn--primary.btn--block(type="submit", ng-disabled="vm.passwordForm.$invalid") Atualizar senha

block links
  .page__links
    a.page__link(ui-sref="dashboard") Voltar para o dashboard
